<%- include("partials/header.ejs") %>
    <h1>Simple Blog</h1>
    <h2>Posts</h2>
    <a href="/new-post">New Post</a>
    <ul>
        <% posts.forEach(function(post) { %>
            <li>
                <h3><a href="posts/<%= post._id %>"> <%= post.title %></a></h3>
                <p><%= post.content.substring(0,100) + "..." %></p>
            </li>
        <% }) %>
        
    </ul>
    
</body>
